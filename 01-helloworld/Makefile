.PHONY: help
help:
	@echo '                                                                          '
	@echo 'Makefile                                                                  '
	@echo '                                                                          '
	@echo 'Usage:                                                                    '
	@echo '   make help                           show help                          '
	@echo '                                                                          '
	@echo '   make build                          build                              '
	@echo '                                                                          '
	@echo '                                                                          '
.PHONY: build
build:
	rustc main.rs
	gcc main.c
